{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "typeAcquisition": {
    "include": ["src/types/*", "@types/webpack-env"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
